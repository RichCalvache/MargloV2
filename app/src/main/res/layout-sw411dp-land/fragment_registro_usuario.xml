<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alwaysDrawnWithCache="false"

        android:fadeScrollbars="true"
        android:scrollbars="vertical"
        tools:context=".Registro3Fragment">


        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:scrollbars="vertical"
            android:verticalScrollbarPosition="defaultPosition">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/therapycolor3"
                android:fontFamily="@font/adamina"
                android:text="Registro de usuario:"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Digite su nombre:"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:fontFamily="@font/adamina"
                android:visibility="gone" />

            <EditText
                android:id="@+id/nombreTextid"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/adamina"
                android:hint="Nombres"
                android:textColorHighlight="@color/therapycolor3"
                android:textSize="24dp" />
            <EditText
                android:id="@+id/apellidosTextid"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/adamina"
                android:hint="Apellidos"
                android:textColorHighlight="@color/therapycolor3"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/edadTextid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Edad"
                android:fontFamily="@font/adamina"
                android:inputType="number"
                android:textSize="24dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/adamina"
                android:text="Género"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:visibility="visible" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Masculino"
                    android:fontFamily="@font/adamina"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/radioF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Femenino"
                    android:fontFamily="@font/adamina"
                    android:textSize="24sp" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/therapycolor3"
                android:fontFamily="@font/adamina"
                android:text="Datos de contacto:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/direccionid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Dirección de residencia"
                android:fontFamily="@font/adamina"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/ciudadid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/adamina"
                android:hint="Ciudad"
                android:textSize="24dp" />


            <EditText
                android:id="@+id/celularid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Número de celular"
                android:fontFamily="@font/adamina"
                android:inputType="number"
                android:textSize="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/therapycolor3"
                android:fontFamily="@font/adamina"
                android:text="Seleccione un avatar:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerAvatarsId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp" />


        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/idFabRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="7dp"
            android:clickable="true"
            android:src="@drawable/check"
            app:backgroundTint="@color/kisspngspeechtherapy1" />
    </RelativeLayout>


</ScrollView>