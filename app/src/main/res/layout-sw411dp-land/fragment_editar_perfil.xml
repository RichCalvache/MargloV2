<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">





        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:scrollbars="vertical"
            android:verticalScrollbarPosition="defaultPosition">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/estilo_recuadro_editar_perfil"
                android:fontFamily="@font/adamina"
                android:text="Editar datos de contacto:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sizeText_Editar"
                android:visibility="visible" />


            <EditText
                android:id="@+id/direccionid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Dirección de residencia"
                android:fontFamily="@font/adamina"
                android:textSize="@dimen/sizeText_Editar" />

            <EditText
                android:id="@+id/ciudadid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/adamina"
                android:hint="Ciudad"
                android:textSize="@dimen/sizeText_Editar" />


            <EditText
                android:id="@+id/celularid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Número de celular"
                android:fontFamily="@font/adamina"
                android:inputType="number"
                android:textSize="@dimen/sizeText_Editar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/estilo_recuadro_editar_perfil"
                android:fontFamily="@font/adamina"
                android:text="Cambiar avatar:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sizeText_Editar" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerAvatarsId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/idFabRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="28dp"
                android:clickable="true"
                android:src="@drawable/check"
                app:backgroundTint="@color/kisspngspeechtherapy1"
                android:focusable="true" />
        </LinearLayout>







</ScrollView>