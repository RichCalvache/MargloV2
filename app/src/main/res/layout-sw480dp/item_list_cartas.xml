<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCarta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardBackgroundColor="@color/therapycolor2"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/barraSeleccionArribaId"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/barraSeleccionIzquierdaId"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />


                <ImageView
                    android:id="@+id/idImagen"
                    android:layout_width="118dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/logofinal8" />

                <TextView
                    android:id="@+id/barraSeleccionDerechaId"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

            </LinearLayout>


            <TextView
                android:id="@+id/barraSeleccionId"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>
